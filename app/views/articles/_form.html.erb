<%= simple_form_for(@article, html: { multipart: true }) do |f| %>
  <%= f.error_notification %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center">
        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.input :content, as: :text %>
          <div class="row">
            <div class="col-md-6">
              <%= f.file_field :image %>
            </div>
            <div class="col-md-6">
              <%= f.input :published %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
