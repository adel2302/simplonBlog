<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Mes articles</h1>
  </div>
</div>
<% if current_user.role == 'admin' %>
  <div class="row">
    <div class="col-md-1">
      <%= link_to url_for(action: :new) do %>
        <span class="btn btn-sm btn-default glyphicon glyphicon-plus"></span>
      <% end %>
    </div>
    <div class="col-md-10">
      <table border class="table table-striped table-condensed table-dictionnary">
        <thead>
          <tr>
            <th>Titre</th>
            <th>Publi√©</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
          <tr>
            <td><%= link_to article.title, edit_article_path(article)%></td>
            <td><%= article.published%></td>
            <td><%= link_to edit_article_path(article) do %>
                  <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-1">
      <%= link_to url_for(action: :new) do %>
        <span class="btn btn-sm btn-default glyphicon glyphicon-plus"></span>
      <% end %>
    </div>
  </div>
<% else %>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Published</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <% if article.published %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.content %></td>
          <td><%= article.published %></td>
          <td><%= link_to 'Show', article %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>
