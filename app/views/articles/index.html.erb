<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if user_signed_in? && current_user.role == "admin" %>
      <h1 class="text-center">Mes articles</h1>
    <% end %>
  </div>
</div>
<% if user_signed_in? && current_user.role == 'admin' %>
  <div class="row">
    <div class="col-md-1">
      <%= link_to url_for(action: :new) do %>
        <span class="btn btn-sm btn-default glyphicon glyphicon-plus"></span>
      <% end %>
    </div>
    <div class="col-md-10">
      <table border class="table table-striped table-condensed table-dictionnary">
        <thead>
          <tr>
            <th>Titre</th>
            <th>Publié</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
          <tr>
            <td><%= link_to article.title, edit_article_path(article)%></td>
            <td><%= article.published%></td>
            <td><%= link_to edit_article_path(article) do %>
                  <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-1">
      <%= link_to url_for(action: :new) do %>
        <span class="btn btn-sm btn-default glyphicon glyphicon-plus"></span>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-12">
      <div class="well">
        <p><%= t('theme') %>:
          <%= link_to t('all'), root_path %>
          <% tag_cloud Article.tag_counts, %w[s m l] do |tag, css_class| %>
            <%= link_to tag.name, tag_path(tag.name), class: css_class %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <div class="row">
    <% @articles.each do |article| %>
      <% if article.published %>
        <div class="col-md-6">
          <h2 class="text-center"><%= article.title %></h2>
          <p><span class="glyphicon glyphicon-time"></span>Posté le:<%= article.created_at.strftime("%d/%m/20%y") %></p>
          <hr>
          <%= image_tag article.image.url(:medium) %>
          <hr>
          <p class="well"><%= truncate(article.content, length: 200) %></p>
          <%= link_to 'More', article, class: "btn btn-primary" %>
          <hr>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= paginate @articles %>
<% end %>